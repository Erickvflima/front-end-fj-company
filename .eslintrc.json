{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parser": "@babel/eslint-parser", // Certifique-se de que o pacote `@babel/eslint-parser` esteja instalado
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module" // Configuração para módulos ES6
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "plugins": ["react", "react-hooks", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
